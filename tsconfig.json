{
  "compilerOptions": {
    "outDir": "./build/",
    "sourceMap": true,
    "noImplicitAny": true,
    "lib": ["es5", "dom", "es2017"],
    "module": "es2015",
    "target": "es5",
    "esModuleInterop": true,
    "downlevelIteration": true,
    "allowJs": true
  },
  "exclude": [
    "node_modules",
    "tests"
  ]
}
